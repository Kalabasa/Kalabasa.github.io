@require '../styl/common'
@require '../styl/page'
@require '../styl/prose'

@require '../styl/mockphone'
@require '../styl/mockalbum'

hedge = margin-hedge * 2

section.work-back
	padding 2em 1em 0
	font-size 80%
	a::before
		content 'Â« '
	@media (min-width 1024px)
		padding 4em hedge 0

section.work-content
	flex 1
	width 100%
	padding 1em
	@media (min-width 1024px)
		padding 1em hedge 4em

section.work-suggested
	items-margin = 16px

	display flex
	flex-wrap wrap
	justify-content space-between
	padding (margin-hedge / 2) margin-hedge
	background color-bg2

	.suggested-item
		position relative
		flex 0 1 auto
		margin items-margin
		width 320px
		height 8rem
		background color-bg
		text-decoration none
		overflow hidden
		transition transform 0.1s ease-swift
		img
			display block
			width 100%
			max-height 1.5rem
			object-fit cover
			transition max-height 0.1s ease-swift
		.item-info
			margin 1rem
			transition opacity 0.1s ease-swift
		.item-context
			margin-bottom 0.5em
			font-size 80%
			text-transform uppercase
			opacity 0.4
		.item-name
			font-heading2()
			text-overflow ellipsis
			whitespace nowrap
			overflow hidden
			
		&:hover, &:focus
			border-color color-accent
			background color-accent
			transform scale(1.05)
			.item-info
				opacity 0.4
			img
				max-height 4.5rem
				opacity 0.8
