@require 'reset'
@require 'constants'
@require 'animation'

font-body()
	font-family 'Montserrat', sans-serif
	font-size font-size-body
	font-weight 500
	line-height 1.4

font-heading-section()
	font-family 'Source Code Pro', monospace
	font-size 116%
	font-weight 700
	letter-spacing 0.06em
	line-height normal
	opacity 0.6

font-heading1()
	font-family 'Montserrat', sans-serif
	font-size 150%
	font-weight 300
	letter-spacing normal
	line-height normal

font-heading2()
	font-family 'Montserrat', sans-serif
	font-size 108%
	font-weight 700
	letter-spacing normal
	line-height normal
	opacity 0.9

clip-slant(diff, start = 0%, end = 100%)
	clip-path "polygon(0% %s, 100% calc(%s + %s), 100% %s, 0% calc(%s - %s))" % (start start diff end end diff)

perspective-std()
	perspective 1600px

// common classes
.page-heading
	font-heading1()

a.anchor-em
	padding-top 0.5em
	padding-bottom 0.2em
	font-size 120%
	font-weight bold
	text-transform uppercase
	text-decoration inherit

// common defaults
body
	background color-bg
	color color-fg
	font-body()

em
	font-style italic

strong
	font-weight bold
	
*
	color inherit
	box-sizing border-box

::selection
	color color-fgi
	background color-accent3-tint

color-link = rgba(color-accent, 60%)
a:not(.anchor-plain)
	padding-left 0.1rem
	padding-right 0.1rem
	color color-fg
	background linear-gradient(to bottom, transparent 60%, color-link 60%)
	border-bottom solid 2px color-link
	text-decoration inherit
	&:hover, &:focus
		background color-accent
		box-shadow 0 -1px 0 2px color-accent
	&[target=_blank]::after
		display inline
		content '\29C9'
		color transparent
		user-select none
		background url('/img/icon-open.svg') center / contain no-repeat
