@require 'common'

.prose
	font-size 150%
	line-height 150%
	font-weight bold

	h1, h2, h3, h4, h5, h6
		margin 1em 0 1em

	h1
		font-heading-section()
		font-size 150%
		line-height 2
		text-align center
		text-transform uppercase

	h2
		font-heading1()

	h3
		font-heading2()

	h4
		font-heading1()
		font-size 110%

	h5
		font-heading2()
		font-size 110%

	h6
		font-heading1()
		font-size 100%

	img
		width 100%
		height auto
		max-height 80vh
		object-fit contain
