.main[data-page='index.html'] section.intro
	position relative
	display flex
	flex-direction column
	justify-content center
	align-items flex-start
	min-height 90vh
	perspective-std()
	.intro-greeting
		margin-top 0.4em
		font-family 'Montserrat', sans-serif
		font-weight bold
		font-size 70pt
		text-align left
		text-transform lowercase
	.intro-text
		margin-bottom 0.5em
		max-width 20em
		font-size 27pt
		line-height 1.2em
		&:last-child
			margin-bottom 2em
		@media (min-width 60em)
			max-width 50%

	for i in (1..3) // adjust as needed
		> :nth-child({i})
			transform-origin top center
			animation appear 0.6s (i * 0.1s + 0.4s) ease-swift-out backwards
		
	// this makes skewed borders
	&::before
		content ''
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		outline solid 1px transparent // antialias hack
		background url('img/tex.png'), linear-gradient(120deg, color-accent 60%, color-accent-tint)
		transform-origin left top
		transform skewY(holy-angle)
		z-index -1

// hack header for intro screen
.main[data-page='index.html'] header.header
	position absolute
	background none
	z-index 1
