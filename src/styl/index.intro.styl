section.intro
	position relative
	display flex
	flex-direction column
	justify-content center
	align-items flex-start
	min-height 100vh
	perspective-std()
	.intro-greeting
		font-family 'Montserrat', sans-serif
		font-weight 700
		font-size 70pt
		line-height 1.5
		text-align left
		text-transform lowercase
	.intro-text
		font-size 21pt
		line-height 1.2em
		margin-bottom 0.5em
		max-width 50%

	for i in (1..3) // adjust as needed
		> :nth-child({i})
			transform-origin top center
			animation appear 0.6s (i * 0.1s + 0.5s) ease-swift-out backwards
		
	// this makes skewed borders
	&::before
		content ''
		position absolute
		left 0
		right 0
		top 0
		bottom 0
		background linear-gradient(120deg, color-accent 60%, color-accent-tint)
		transform-origin left top
		transform skewY(holy-angle)
		z-index -1
