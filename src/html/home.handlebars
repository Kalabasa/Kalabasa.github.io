<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<title>Lean Rada</title>
	<link rel="stylesheet" type="text/css" href="style.css">
</head>
<body>
	<div id="main-container">

		<section id="hello">
			<div id="hello-text">
				<div id="hello-portrait">
					<img src="{{bio.portrait.image_src}}"/>
				</div>
				<div id="hello-me">
					<h1>Hi!</h1>
					<p class="heading">{{bio.heading}}</p>
					<p id="hello-me-title-state" class="heading">I'm <span id="hello-me-title">{{bio.titles.[0]}}</span></p>
					{{#each bio.text}}
						<p class="text">{{this}}</p>
					{{/each}}
				</div>
			</div>
		</section>

		<section id="experience">
			<h1 class="section-heading">Work</h1>
			<p class="text">{{experience.text}}</p>
			<ul class="timeline"
				data-aos="fade-up"
				data-aos-once="true">
				{{#each experience.works}}
					<li data-aos="fade-up"
						data-aos-once="true">
						<div class="timeline-entry">
							<div class="experience-entry field-box">
								{{#if image}}
									<img class="image" src="{{image.src}}" title="{{image.title}}"/>
								{{/if}}
								<div class="field value job">{{job}}</div>
								{{#if company}}
									<div class="field company">at <span class="value">{{company}}</span></div>
								{{else}}
									{{#if alt_company}}
										<div class="field value company">{{alt_company}}</div>
									{{/if}}
								{{/if}}
								{{#if date.[1]}}
									<div class="field date">from <span class="value">{{date.[0]}}</span> to <span class="value">{{date.[1]}}</span></div>
								{{else}}
									<div class="field date">in <span class="value">{{date.[0]}}</span></div>
								{{/if}}
								<p class="field info">{{{info}}}</p>
							</div>
						</div>
					</li>
				{{/each}}
			</ul>
		</section>

		<section id="education">
			<h1 class="section-heading">Education</h1>
			<p class="text">{{education.text}}</p>
			<ul class="nolist">
				{{#each education.schools}}
					<li data-aos="fade"
						data-aos-once="true">
						<div class="education-entry field-box">
							{{#if course}}
								<div class="field value course">{{course}}</div>
							{{/if}}
							<div class="field name">at <span class="value">{{name}}</span></div>
							{{#if date.[1]}}
								<div class="field date">from <span class="value">{{date.[0]}}</span> to <span class="value">{{date.[1]}}</span></div>
							{{else}}
								<div class="field date">in <span class="value">{{date.[0]}}</span></div>
							{{/if}}
							<div class="field value info">{{{info}}}</div>
						</div>
					</li>
				{{/each}}
			</ul>
		</section>

		<footer id="footer">
			<ul class="contact">
				<li class="">{{links.email}}</li>
			</ul>
			<p class="copytext">&copy; 2017 Lean Rada</p>
		</footer>

		<nav id="nav">
			<ol>
				<li><a href="#hello">Hi</a></li>
				<li><a href="#experience">Exp</a></li>
				<li><a href="#education">Edu</a></li>
			</ol>
		</nav>

	</div>

	<script>var bio = {titles: [{{#each bio.titles}}{{#if @index}},{{/if}}"{{this}}"{{/each}}]};</script>
	<script type="text/javascript" src="script.js"></script>
</body>
</html>